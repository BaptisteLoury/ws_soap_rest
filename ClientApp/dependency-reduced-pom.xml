<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>projet.ensiie.ws</groupId>
  <artifactId>client-app</artifactId>
  <name>client-app</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>Soap Client Spring Boot</description>
  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.1.0</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>com.example.demo.WSClientApp</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
        <artifactId>maven-jaxb2-plugin</artifactId>
        <version>0.14.0</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <catalog>src/main/resources/catalog.cat</catalog>
          <schemaLanguage>WSDL</schemaLanguage>
          <generatePackage>com.train.booking.wsdl</generatePackage>
          <strict>false</strict>
          <schemas>
            <schema>
              <url>http://localhost:8181/train-booking/ws/trainBooking.wsdl</url>
            </schema>
          </schemas>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.target>1.6</maven.compiler.target>
    <java.version>1.8</java.version>
    <maven.compiler.source>6</maven.compiler.source>
  </properties>
</project>
